{
    "manifest_version": 2,
    "author": "Filipe PS",
    "name": "Assista sem baixar",
    "description": "Esta extens√£o para navegador permite assitir video sem baixar com suporte a legendas.",
    "version": "0.2",
    "icons": {
        "32": "icons/icon.png"
    },
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "menus"
    ],
    "browser_action": {
        "default_title": "Assista sem baixar",
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icons/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content-script.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "page": "background.html"
    }
}